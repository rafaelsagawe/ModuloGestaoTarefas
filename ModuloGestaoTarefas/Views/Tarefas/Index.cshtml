@model IEnumerable<ModuloGestaoTarefas.Models.Tarefa>

<h1 class="text-center">Lista de tarefas</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form method="post" asp-action="AddTarefa" asp-controller="Tarefas">
    <div class="input-group">
        <input name="titulo" class="form-control" placeholder="Digite aqui a sua tarefa">
        <span class="input-group-btn">
            <button class="btn btn-info">Nova Tarefa</button>
        </span>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.concluido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dataCriacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dataAlteracao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.concluido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.usuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dataCriacao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dataAlteracao)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
